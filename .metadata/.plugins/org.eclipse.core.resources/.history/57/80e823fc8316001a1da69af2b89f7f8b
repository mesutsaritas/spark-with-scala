package com.saritasmesut

import org.apache.spark._

object StarCount {

  def main(args: Array[String]): Unit = {
    printf("Hello Scala");

    val sparkContext = new SparkContext("local[*]", "StarCounter")
    val linesOfFile = sparkContext.textFile("../ml-100k/u.data", 100)

    val ratings = linesOfFile.map(line => line.toString().split("\t"))

    val hist = ratings.countByKey
    for ((k, v) <- hist) {
      println(k + "===>" + v)
    }

  }

}